{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="text-{{block.settings.text_size}}  bg-[{{ block.settings.bg_color }}] text-[{{ block.settings.text_color }}] p-[{{ block.settings.bar_size }}px]" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="flex my-auto space-x-4">
          {%- endif -%}
              <p class="text-{{block.settings.text_align}}">
                {{ block.settings.text | escape }} 
                <!-- {%- if block.settings.link != blank -%}
                  <div class="h-5 w-5 my-auto" >{% render 'icon-arrow' %}</div>
                {%- endif -%} -->
              </p>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "accouncement here"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "background color",
          "default": "#232323"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "text color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "font size",
          "options": [
            {
              "value": "xs",
              "label": "xs"
            },
            {
              "value": "sm",
              "label": "sm"
            },
            {
              "value": "lg",
              "label": "lg"
            }
          ],
          "default": "xs"
        },
        {
          "type": "range",
          "id": "bar_size",
          "min": 6,
          "max": 106,
          "step": 1,
          "unit": "px",
          "label": "bar hight",
          "default": 12
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "text alignment",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "right",
              "label": "right"
            }
          ],
          "default": "center"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
